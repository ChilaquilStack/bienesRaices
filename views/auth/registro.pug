extends ../layout/index

block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= titulo

        if errores
            .max-w-md.mx-auto.my-10
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold #{error.msg}

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/registro" novalidate)
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div
                        label(for="nombre").block.text-sm.uppercase.text-gray-500.mb-2.font-bold Tu nombre
                        input(type="text", placeholder="Tu nombre", name="nombre" value=usuario && usuario.nombre)#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400
                    div
                        label(for="email").block.text-sm.uppercase.text-gray-500.mb-2.font-bold Email de Registro
                        input(type="email", placeholder="Tu Email", name="email" value=usuario && usuario.email)#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400
                    div
                        label(for="password").block.text-sm.uppercase.text-gray-500.mb-2.font-bold Password
                        input(type="password", placeholder="Tu password", name="password")#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400
                    div
                        label(for="repetir_password").block.text-sm.uppercase.text-gray-500.mb-2.font-bold Repetir Password
                        input(type="password", placeholder="Repetir tu password", name="repetir_password")#repetir_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400
                    .flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login") Iniciar sesion
                    input(type="submit" value="Crear Cuenta" class="hover:bg-indigo-700").w-full.bg-indigo-600.text-white.font-bold.py-3.cursor-pointer